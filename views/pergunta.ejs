<%-  include('partials/header.ejs') %>
<body>
    <%-  include('partials/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Realizar perguntas</h3>
            </div>
            <div class="card-boyd p-3">               
                    <label for="titutlo">Título</label>
                    <input type="text" id="titutlo" placeholder="Título" class="form-control" disabled value=" <%= perguntas.titulo %> "  name="titulo">
                    <br>
                    <label for="">Descrição</label>
                    <textarea placeholder="Descreva aqui sua pergunta" class="form-control" disabled value=" <%= perguntas.descricao %> " name="descricao"></textarea>
                    <br>
                    <div class="container">
                        <form method="POST" action="/responder">
                            <input type="hidden" value="<%= perguntas.id %>" name="codigo" id="codigo" class="hidden">
                            <h4>Responder</h4>
                            <textarea class="form-control" name="resposta" id="resposta" cols="30" rows="5"></textarea>
                            <br>
                            <button class="btn btn-success">Perguntar</button>
                        </form>
                    </div>
                    <h3>Respostas</h3>
                    <% respostas.forEach( resposta => { %>
                        <br>
                        <div class="card">
                            <div class="card-body">
                                <%= resposta.corpo %> 
                            </div>
                        </div>

                    <% }) %>
            </div>
        </div>        
    </div>
</body>
<%-  include('partials/footer.ejs') %>